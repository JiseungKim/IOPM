<script type="text/x-template" id="create_project_template">
    <transition name="create_project">
        <div class="modal-mask">
            <div class="modal-wrapper">
                <div class="create-project-container">
                    
                    <div class="caption">
                        <div class="title">Confirm</div>
                    </div>
                    
                    <div class="contents">
                        <input type="text" name="title" v-model='project_title' placeholder="Project title" />
                        <textarea name="desc" rows="10" v-model='project_desc' placeholder="Project description" />
                        <div class="buttons">
                            <button class="no" @click="$emit('close')">NO</button>
                            <button class="yes" v-bind:title='project_title' v-bind:desc='project_desc' v-on:click="$emit('ok', {title: $event.target.attributes.title.value, desc: $event.target.attributes.desc.value})">YES</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </transition>
</script>

<script>
    Vue.component('create_project', {
        props: ['title', 'desc'],
        data: function () {
            return {
                project_title: this.title,
                project_desc: this.desc
            }
        },
        template: '#create_project_template'
    })
</script>


