<script type="text/x-template" id="confirm_template">
    <transition name="confirm">
        <div class="modal-mask">
            <div class="modal-wrapper">
                <div class="modal-container">
                    
                    <div class="caption">
                        <div class="title">Confirm</div>
                    </div>
                    
                    <div class="contents">
                        <div class="message">
                            <div class="icon">
                                <img src=<%= cdn("image/warning.png") %> />
                            </div>
                            <div>
                                <div>Are you sure you want to delete this fie?</div>
                                <div>You can't undo this action.</div>
                            </div>
                        </div>
                        <div class="buttons">
                            <button class="no" @click="$emit('close')">NO</button>
                            <button class="yes" v-bind:role='role' v-bind:dest='dest' v-on:click="$emit('ok', {role: $event.target.attributes.role.value, dest: $event.target.attributes.dest.value})">YES</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </transition>
</script>

<script>
    Vue.component('confirm', {
        props: ['role', 'dest'],
        template: '#confirm_template'
    })
</script>


